  <script>
// Check if there is a stored image URL in session storage
var storedImageURL = sessionStorage.getItem('profile_image');
if (storedImageURL) {
    // If a stored image URL exists, set it as the source of the profile image
    document.getElementById('preview_image').src = storedImageURL;
}

function previewImage(event) {
    var reader = new FileReader();
    reader.onload = function(){
        var output = document.getElementById('preview_image');
        output.src = reader.result;

        // Store the image URL in session storage
        sessionStorage.setItem('profile_image', reader.result);
    };
    reader.readAsDataURL(event.target.files[0]);
}

    
  </script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Get the student link
    var studentLink = document.getElementById('studentLink');
    var admindash = document.getElementById('admindashboard');



    // Get the mainContent div
    var mainContent = document.getElementById('mainContent');
    
    // Get the CRUD container
    var crudContainer = document.getElementById('crud');

    if (crudContainer) {
        crudContainer.style.display = 'none';
      }

      
       
      admindash.addEventListener('click', function () {
        // Hide the mainContent div
        if (mainContent) {
          mainContent.style.display = 'block';
        }
          // Show the CRUD container
        if (crudContainer) {
          crudContainer.style.display = 'none';
        }
      });  
    // Add click event listener to the student link
    studentLink.addEventListener('click', function () {
      // Hide the mainContent div
      if (crudContainer) {
        crudContainer.style.display = 'block';
      }

      if (mainContent) {
        mainContent.style.display = 'none';
      }
    
      // Show the CRUD container
      
    });


  });
</script>

